<% if (classes.length > 0) { %>
<div class="col-lg-6 mb-4">
  <div class="card shadow mb-4">
    <div class="card-header py-3" style="padding-bottom: 10px;">
      <h6 class="text-primary fw-bold m-0">Percentage</h6>
    </div>
    <!-- if classes are present, show the percentages -->
    <% classes.forEach(currentClass => { %>
    <!-- print the class details -->
    <% console.log(currentClass) %>
    <div class="card-body"">
      <h4 class="small fw-bold">
        <%- currentClass.ClassName %>
        <span class="float-end"><%= currentClass.Percentage%>%</span>
      </h4>
      <div class="progress mb-4">
        <div
          class="progress-bar bg-warning"
          aria-valuenow="<%= currentClass.Percentage %>"
          aria-valuemin="0"
          aria-valuemax="100"
          style="width: <%= currentClass.Percentage %>%"
        >
          <span class="visually-hidden"><%= currentClass.Percentage%> %</span>
        </div>
      </div>
    </div>
    <% });%>
    <!-- show this if no classes are present -->
    <% } else { %>
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="text-primary fw-bold m-0">
          Enter the timetable to select Subjects here!
        </h6>
      </div>
    </div>
    <% } %>

    <!-- ends here -->
  </div>
</div>

